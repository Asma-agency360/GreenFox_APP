<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Update_waiter">


    <TextView
        android:id="@+id/text_update_waiter"
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:background="#043506"
        android:fontFamily="@font/bowlby_one"
        android:text="Update Waiter"
        android:gravity="center"
        android:textColor="#F0F3F0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/et_name_update_Waiter"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_textbox"
            android:drawableLeft="@drawable/ic_person_white"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#F0EAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_email_update_waiter"
            android:layout_width="272dp"
            android:layout_height="52dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/edit_textbox"
            android:drawableLeft="@drawable/ic_email_white"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName|textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#F8F2F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_password_update_waiter"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_textbox"
            android:drawableLeft="@drawable/ic_lock_white"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#E8FCF7F7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_update_waiter"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="#063A08"
            android:gravity="center"
            android:text="Create Account"
            android:textColor="#AEBDAF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>