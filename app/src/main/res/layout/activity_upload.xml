<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">


    <ImageButton
        android:id="@+id/btn_image"
        android:layout_width="415dp"
        android:layout_height="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upload_im" />


    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Post ID"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/postid_new"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="Post ID"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="420dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintTop_toBottomOf="@+id/btn_image"
        app:layout_constraintVertical_bias="0.923"
        tools:layout_editor_absoluteX="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Image URL"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/image_url_new"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="Image URL"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="393dp"
        android:layout_height="47dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_image"
        app:layout_constraintVertical_bias="0.83">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Category ID"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/category_id_new"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="Category ID"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="409dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintTop_toBottomOf="@+id/btn_image"
        app:layout_constraintVertical_bias="0.883"
        tools:layout_editor_absoluteX="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Item Name"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/item_name_new"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="Item Name"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="406dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_up_Pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_image"
        app:layout_constraintVertical_bias="0.908">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Item Price"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/item_price_new"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="Item Price"
            android:textSize="20sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_up_Pic"
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:background="#CD06530A"
        android:text="UPLOAD"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"></Button>

    <TextView
        android:id="@+id/txt_url"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>