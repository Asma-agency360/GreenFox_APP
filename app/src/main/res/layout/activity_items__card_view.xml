<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodback"
    tools:context=".Items_CardView">


    <TextView
        android:layout_width="334dp"
        android:layout_height="61dp"
        android:text="MENU"
        android:textAlignment="center"
        android:textColor="#022504"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <GridLayout
        android:id="@+id/mygrid"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="180dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_breakfast"
            android:layout_width="145dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"

            android:background="@drawable/card"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/greenfoxlogo" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BreakFast Menu"
                    android:textAlignment="center"
                    android:textColor="#022504"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_Lunch"
            android:layout_width="145dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="14dp"

            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/card"
            android:outlineSpotShadowColor="#012B02"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/greenfoxlogo" />


                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Lunch Menu"
                    android:textAlignment="center"
                    android:textColor="#022504"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_Weekends"
            android:layout_width="145dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"

            android:background="@drawable/card"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/greenfoxlogo" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekend Menu"
                    android:textAlignment="center"
                    android:textColor="#022504"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_side"
            android:layout_width="145dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"

            android:background="@drawable/card"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">
            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/greenfoxlogo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Side Menu"
                    android:textAlignment="center"
                    android:textColor="#022504"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_smothies"
            android:layout_width="145dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"

            android:background="@drawable/card"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/greenfoxlogo" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smothies"
                    android:textAlignment="center"
                    android:textColor="#022504"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_drinks_and_retails"
            android:layout_width="145dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"

            android:background="@drawable/card"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/greenfoxlogo" />


                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drinks and Retails"
                    android:textAlignment="center"
                    android:textColor="#022504"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>