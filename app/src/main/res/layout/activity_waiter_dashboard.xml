<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodback"
    tools:context=".WaiterDashboard">

    <TextView
        android:layout_width="416dp"
        android:layout_height="75dp"
        android:background="#1D3601"
        android:paddingTop="5dp"
        android:text="MANAGE WAITER"
        android:textAlignment="center"
        android:textColor="#F4F7F4"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <GridLayout
        android:id="@+id/mygrid"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="400dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413"
        tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_waiter"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:layout_columnWeight="1"

        android:background="@drawable/card"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="20dp"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="76dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/greenfoxlogo" />


            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Waiter"
                android:textAlignment="center"
                android:textColor="#022504"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_list_of_Waiter"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:layout_columnWeight="1"
        android:layout_marginLeft="14dp"

        android:layout_marginRight="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/card"
        android:outlineSpotShadowColor="#012B02"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="76dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/greenfoxlogo" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="View Waiter List"
                android:textAlignment="center"
                android:textColor="#022504"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>